{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
